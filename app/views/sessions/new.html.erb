

<div class="text-center home">
  <%= link_to image_tag("Group_8.png", alt: "InternConnect"), '#' %>
</div>
<div class = "window">
  <h2 class='text-center login'>Log in</h2>

  <div class="row">
    <div class="col-md-6 offset-3" style = "background-color: #FFF9EA">
      <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>
        <div class="text-center">
          <%= f.submit "Log in", class: " mt-2 btn btn-outline-dark" %>
        </div>
      <% end %>

    </div>
  </div>
</div>
