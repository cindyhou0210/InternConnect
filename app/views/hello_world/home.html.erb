<div class="center">
  <%= link_to image_tag("Group_8.png", alt: "InternConnect"), '#' %>
</div>

  <div class = "center table">
    <h1>Program Reviews</h1>

    <table>
      <thead>
        <tr>
          <th>User</th>
          <th>Program</th>
          <th>Company</th>
          <th>Comment</th>
          <th colspan= "3"></th>
        </tr>
      </thead>

      <tbody>
        <% @reviews.each do |review| %>
          <tr>
            <td><%= review.user.name %></td>
            <td><%= review.program.name %></td>
            <td><%= review.program.company.name %></td>
            <td><%= review.comment %></td>

            <% if review.user.user_confid == current_user %>
              <td><%= link_to 'Show', review %></td>  
              <td><%= link_to 'Edit', edit_review_path(review) %></td>
              <td><%= link_to 'Delete', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% else %>
              <td><%= link_to 'Show', review %></td>  
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>

    <div class="text-center">
      <%= link_to "Add Your Review", add_review_path, class: "btn btn-outline-dark" %>
    </div>
  </div>




