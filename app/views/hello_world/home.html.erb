<p id="notice"><%= notice %></p>

<div class = "table">
  <h1>Reviews</h1>

  <table>
    <thead>
      <tr>
        <th>User</th>
        <th>Comment</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @reviews.each do |review| %>
        <tr>
          <td><%= review.user %></td>
          <td><%= review.comment %></td>
          <td><%= link_to 'Show', review %></td>
          <td><%= link_to 'Edit', '#' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>

