<%= form_with model: @company, local: true do |form| %>

  <%= render 'shared/error_messages', mod: @company %>

  <div class="pb-3">
    <%= form.label :name, "Company name:" %>
    <%= form.text_field :name%>
  </div>

  <div class="pb-3">
    <%= form.label :field, "Field:" %>
    <%= form.text_field :field%>
  </div>

  <div class="pb-3">
    <%= form.label :stage, "Stage:" %>
    <%= form.text_field :stage%>
  </div>

  <div class="pb-3">
    <%= form.label :description, "Description:" %>
    <%= form.text_area :description, size: "70x5" %>
  </div>

  <%= form.submit "Add Company" %>
<% end %>