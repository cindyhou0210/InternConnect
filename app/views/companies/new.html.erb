<h1 class="mb-4 mt-2 text-center">Add Your Company</h1>

<%= form_with url: add_company_path, method: :post, local: true do |form| %>

  <div class="pb-3">
    <%= form.label :name, "Company name:" %>
    <%= form.text_field :name%>
  </div>

  <div class="pb-3">
    <%= form.label :field, "Sector:" %>
    <%= form.text_field :field%>
  </div>

  <div class="pb-3">
    <%= form.label :stage, "Stage:" %>
    <%= form.text_field :stage%>
  </div>

  <div class="pb-3">
    <%= form.label :description, "Description:" %>
    <%= form.text_area :description, size: "70x5" %>
  </div>

  <%= form.submit "Add Company" %>
<% end %>