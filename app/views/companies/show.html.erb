<div class="jumbotron jumbotron-fluid "style="background-image: linear-gradient(to bottom, rgba(255,255,255,0.6) 100%,rgba(255,255,255,0.9) 100%), url(https://placeimg.com/1000/480/tech); border-radius: 25px;">

    <div class="container">
      <h1 class="display-4 text-center"><%= @company.name %></h1>
      
    </div>
    
</div>

<div class="container text-center mt-2">
  <div class="row">
      <div class="col-sm">
        <div class="card" style="background-color: transparent;">
          <div class="card-body">
              <p>
                
              <strong>
                <h5> <%= @company.field %></h5>
                
              </strong>
              
              
              </p>
          </div>
        </div>
      </div>

      <div class="col-sm">
        <div class="card" style="background-color: transparent;">
          <div class="card-body">
              <p>
                
              <strong>
                <h5> <%= @company.stage %></h5>
                
              </strong>
              
              
              </p>
          </div>
        </div>
      </div>



  </div>
</div>

<div class="container mt-4">
  <h2> Company Description </h2>
  <p>
   <%= @company.description %>
    
  </p>
</div>




<div class = "center table">
    <h1>Reviews</h1>

    <table>
      <thead>
        <tr>
          <th>User</th>
          <th>Program</th>
          <th>Company</th>
          <th>Comment</th>
          <th colspan= "3"></th>
        </tr>
      </thead>

      <tbody>
          <% Review.all.each do |review| %>
              <tr>
                <% if review.program.company == @company %>
                  <% if !review.user.nil? || !review.program.nil? %>
                    <td><%= review.user.name %></td>
                    <td><%= review.program.name %></td>
                    <td><%= review.program.company.name %></td>
                    <td><%= review.comment %></td>

                    <% if review.user.user_confid == current_user && !current_user.nil? %>
                      <td><%= link_to 'Show', review %></td>  
                      <td><%= link_to 'Edit', edit_review_path(review) %></td>
                      <td><%= link_to 'Delete', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    <% else %>
                      <td><%= link_to 'Show', review %></td>  
                    <% end %>
                    
                  <% end %>
                </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
</div>


<div class= "text-center">
  <%= link_to "Back",redirect(reviews_path), class: "btn btn-outline-dark" %>
</div>

